    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" type="text/css" href="#{webroot}/css/bootstrap.min.css" charset="utf-8">
    <link href="#{webroot}/css/plugins/datapicker/bootstrap-datepicker.css" rel="stylesheet">
    <script src="#{webroot}/js/jquery-2.1.1.min.js"></script>
    <script src="#{webroot}/js/bootstrap.min.js"></script>
    <script src="#{webroot}/js/plugins/layer/layer.js"></script>
    <link rel="stylesheet" type="text/css" href="#{webroot}/js/plugins/layer/skin/layer.css" charset="UTF-8">
</head>
<body>
<div class="page-header">
    <ol class="breadcrumb">
        <li><a href="#{webroot}/admin/customer">订单列表</a></li>
        <li class="active">更新</li>
    </ol>
    <h1>订单更新
        <small>客户信息</small>
    </h1>

</div>
<form method="POST">
    <div class="col-md-10 col-lg-10">
        <div class="col-sm-6 col-md-6">
            <div class="form-group">
                <div class="col-sm-9">
                    <input type="hidden" id="id" name="id" value="$!cus.id" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">合同号：</label>
                <div class="col-sm-9">
                    <input type="number" id="contractNum" value="$!cus.contractNum" name="contractNum" class="form-control" placeholder="请输入合同号" required=""><span
                        class="help-block m-b-none">格式：15090001</span>

                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">联系方式：</label>
                <div class="col-sm-9">
                    <input pattern="(\d{11})|^((\d{7,8})|(\d{4}|\d{3})-(\d{7,8})|(\d{4}|\d{3})-(\d{7,8})-(\d{4}|\d{3}|\d{2}|\d{1})|(\d{7,8})-(\d{4}|\d{3}|\d{2}|\d{1}))$"
                           required="required" type="text" value="$!cus.customerPhone" id="customerPhone" name="customerPhone" class="form-control"
                           placeholder="请输入联系方式"> <span class="help-block m-b-none">固话格式：059212345678</span>

                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">客户坐标：</label>
                <div class="col-sm-9">
                    <input type="text" id="customerGps" value="$!cus.customerGps" name="customerGps" readonly class="form-control" placeholder="左边地图查询，点击确认"> <span onclick="showMap();" class="glyphicon glyphicon-map-marker"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">用户类别：</label>
                <div class="col-sm-9">
                    <select class="form-control" value="$!cus.customerType" name="customerType"  id="customerType">
                        #foreach($item in $userTypes)
                            #if($item.id==$cus.customerType)
                                <option value="$item.id" selected>$item.userType</option>
                            #else
                                <option value="$item.id">$item.userType</option>
                            #end
                        #end
                    </select>
                </div>
            </div>
            <div class="form-group" id="sandbox-container">
                <label class="col-sm-3 control-label">购卡日期：</label>
                <div class="col-sm-9  input-append date">
                    <input type="text" name="customerBuytime" value="$date.format('yyyy/MM/dd/',$!cus.customerBuytime)" id="customerBuytime" class="form-control"/>
                    <span class="add-on"></span>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-6">
            <div class="form-group">
                <label class="col-sm-3 control-label">客户名：</label>
                <div class="col-sm-9">
                    <input type="text" required="required" name="customerName" value="$!cus.customerName" id="customerName" class="form-control"
                           placeholder="请输入客户名字">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">服务地址：</label>
                <div class="col-sm-9">
                    <input type="text" name="customerAddress" value="$!cus.customerAddress" id="customerAddress" class="form-control" placeholder="请输客户地址">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">附近公交站：</label>
                <div class="col-sm-9">
                    <input type="text" name="customerBus" id="customerBus" value="$!cus.customerBus" class="form-control" placeholder="公交站"> <span
                        class="help-block m-b-none">控制在一俩站内</span>

                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">固定服务时间：</label>
                <div class="col-sm-9">
                    <input type="text" id="customerStime" value="$!cus.customerStime" name="customerStime" class="form-control" placeholder="请输入服务时间"> <span
                        class="help-block m-b-none">如：每周一、五上午8:00-11:00</span>

                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">户型：</label>
                <div class="col-sm-9">
                    <input type="text" name="customerHome" value="$!cus.customerHome" id="customerHome" class="form-control" placeholder="请输入户型"> <span
                        class="help-block m-b-none">如：两房一厅约120平</span>

                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">住宅性质：</label>
                <div class="col-sm-9">
                    <input type="text" name="customerHomeKind" value="$!cus.customerHomeKind" id="customerHomeKind" class="form-control" placeholder="如：别墅 ">
                </div>
            </div>
        </div>
        <div class="form-group" style="align-content: center">
            <input type="submit" class="btn btn-success" value="更新"/>
            <input type="reset" class="btn btn-danger" value="取消"/>
        </div>
    </div>

</form>

<script src="#{webroot}/js/plugins/datapicker/bootstrap-datepicker.min.js"></script>
<script src="#{webroot}/js/plugins/datapicker/bootstrap-datepicker.zh-CN.min.js"></script>

<script type="text/javascript">
    $('#sandbox-container .input-append.date').datepicker({
        language: "zh-CN"
    });
    $("form").submit(function () {
       layer.load(1);
        $.ajax({
            url:"/admin/updateCus",
            method:"POST",
            dataType:"JSON",
            data:{
                'id':$("#id").val(),
                'contractNum':$("#contractNum").val(),
                'customerPhone':$("#customerPhone").val(),
                'customerGps':$("#customerGps").val(),
                'customerType':$("#customerType").val(),
                'customerBuytime':$("#customerBuytime").val(),
                'customerName':$("#customerName").val(),
                'customerAddress':$("#customerAddress").val(),
                'customerBus':$("#customerBus").val(),
                'customerStime':$("#customerStime").val(),
                'customerHome':$("#customerHome").val(),
                'customerHomeKind':$("#customerHomeKind").val()
            },
            success:function (res) {
                layer.closeAll("loading");
                if(res==1){
                    layer.alert('更新成功!', {
                        icon: 1,
                        skin: 'layer-ext-moon'
                    });

                }
            },
            error:function (err) {
                layer.closeAll("loading");
                console.log(err);
                layer.msg('更新失败了', {
                    offset: 100,
                    shift: 1
                });            }
        });
        return false;
    });
    // 弹出需要展示的地图
    function showMap(){
        layer.open({
            type: 2,
            area: ['700px', '530px'],
            fix: false, //不固定
            maxmin: true,
            content: '/common/map'
        });
    }
</script>
</body>
<!-- Data picker -->

</html>