    }
    function serviceDetail(id) {
        window.location.href="/admin/detail?id="+id;
    }
    // 增加
    $("#btn_add").click(function () {
        window.location.href = "/admin/addCustomer";
    });
    $('#toolbar').find('select').change(function () {
        console.log("hello");
        var a = $(this).val();
            $table.bootstrapTable('refreshOptions', {
            exportDataType:a
            });
    });
</script>
